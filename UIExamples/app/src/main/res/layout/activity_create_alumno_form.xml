<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateAlumnoForm"
        android:background="@drawable/blue">

    <TextView
            android:text="Create Alumno"
            android:textSize="35dp"
            android:textColor="#C2C2C3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.026"/>
    <EditText
            android:textColor="@color/black"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et_cedula"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.121" android:hint="Cedula..."/>
    <EditText
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_nombre"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.231" android:hint="Nombre..."/>
    <EditText
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_telefono"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.346" android:hint="Telefono..."/>
    <EditText
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.467" android:hint="email..."/>
    <EditText
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/et_fechaNac"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.579" android:hint="fecha nacimiento..."/>
    <Button

            android:backgroundTint="#AFAFAF"
            android:textColor="@color/black"
            android:text="Save"
            android:layout_width="114dp"
            android:layout_height="61dp" android:id="@+id/saveButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.874"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"/>


    <Spinner
            android:layout_width="201dp"
            android:layout_weight="2"
            android:layout_height="43dp"
            android:id="@+id/carreras_spinner"
            android:textColor="@color/black"
            android:background="@color/white"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.707"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.757"/>
    <TextView
            android:text="Carrera:"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintVertical_bias="0.713"/>


</androidx.constraintlayout.widget.ConstraintLayout>