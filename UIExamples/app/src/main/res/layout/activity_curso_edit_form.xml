<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".JobAppEditForm"
        android:background="@drawable/blue">
    <TextView
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:text="Edit Curso"
            android:id="@+id/signin"
            android:textColor="#B1B2B4"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="0dp" android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            android:layout_marginBottom="0dp"
    />
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_name"
            android:layout_width="match_parent"
            android:layout_below="@+id/signin"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/editTextPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_id"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_layout_name"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Id"
                android:inputType="number"
                android:id="@+id/editTextPersonId"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
            android:layout_width="99dp"
            android:layout_height="70dp"
            android:id="@+id/saveButton"

            android:textColor="@color/black"
            android:backgroundTint="#AFAFAF"
            android:text="SAVE"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="329dp"
            android:layout_below="@+id/text_layout_id" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="152dp" android:layout_alignParentStart="true"
            android:layout_marginStart="144dp"/>
</RelativeLayout>