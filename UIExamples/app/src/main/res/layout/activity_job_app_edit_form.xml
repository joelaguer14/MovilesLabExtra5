<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".JobAppEditForm"
        android:background="@color/cardview_dark_background">
    <TextView
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:text="Edit Job Application"
            android:id="@+id/signin"
            android:textColor="#B1B2B4"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="0dp" android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            android:layout_marginBottom="0dp"
    />
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_name"
            android:layout_width="match_parent"
            android:layout_below="@+id/signin"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/editTextPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_id"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_layout_name"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Id"
                android:inputType="number"
                android:id="@+id/editTextPersonId"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_addres"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_layout_id"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Addres"
                android:inputType="textPostalAddress"
                android:id="@+id/editTextPersonAddres"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_email"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_layout_addres"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:id="@+id/editTextPersonEmail"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_phone"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_layout_email"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:id="@+id/editTextPersonPhone"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_position"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_layout_phone"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Position"
                android:id="@+id/editTextPersonPosition"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_startDate"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_layout_position"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date"
                android:inputType="date"
                android:id="@+id/editTextPersonStartDate"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton"
            android:layout_below="@+id/text_layout_startDate"
            android:backgroundTint="@color/black"
            android:layout_centerHorizontal="true"
            android:text="SAVE"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="7mm"
    />
</RelativeLayout>