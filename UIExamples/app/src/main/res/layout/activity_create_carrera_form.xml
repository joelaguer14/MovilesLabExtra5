<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateCarreraForm"
        android:background="@drawable/blue">

    <TextView
            android:text="Crear Carreras"
            android:textSize="35dp"
            android:textColor="#C2C2C3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.026"/>
    <EditText
            android:textColor="@color/black"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/et_codigo"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.121" android:hint="Código..."/>

    <EditText
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_width="309dp"
            android:inputType="text"
            android:layout_height="50dp"
            android:id="@+id/et_nombre"
            android:hint="Nombre..."
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.316"/>
    <EditText
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/et_titulo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.499" android:hint="Título..."/>
    <Button

            android:backgroundTint="#AFAFAF"
            android:textColor="@color/black"
            android:text="Save"
            android:layout_width="114dp"
            android:layout_height="61dp" android:id="@+id/saveButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.751"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>